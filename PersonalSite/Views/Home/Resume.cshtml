@{
    ViewBag.Addendum = ": Resume";
}

<link href="/css/resume-styles.css" rel="stylesheet" />

<div class="resume row" ng-controller="ResumeCtrl" >
    <div id="skills">
        <h3>Skills</h3>
        <ul class="list-inline boxed-list-items">
            <li ng-repeat="skill in resume.skills">
                {{skill}}
            </li>
        </ul>
    </div>

    <div id="jobs">
        <h3>Experience</h3>
        <ul class="list-unstyled">
            <li class="job" ng-repeat="job in resume.jobs">
                <div>
                    <label>{{job.title + ' - ' + job.company}}</label>
                    <span>{{job.startDate}} to {{job.endDate}}</span>
                </div>
                <span ng-repeat="duty in job.duties">{{duty + '; '}}</span>
            </li>
        </ul>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function() {
        $('#resumeTab').addClass('active');
    });

</script>
