<body>
    <div id="navigation">
        <div class="container">
            <div class="section" id="navigation-wrapper">
                <div class="widget HTML" id="HTML11">
                    <ul class="menu">
                        <li><a href="/">Home</a></li>
                        <li><a href="/about">About</a></li>
                        <li><a href="/reading">Books</a></li>
                        <li><a href="/resume">Resume</a></li>
                        <li class="show-on-mobile"><a href="/archive">Archive</a></li>
                    </ul>
                </div>
            </div>
            <div class="section mobile-hide" id="top-social">
                <div class="widget HTML" id="HTML10">
                    <span class="menu-item-styles transitional-max">Follow me:
                    </span>
                    <a href="http://github.com/colin-higgins" target="_blank">
                        <i class="fa fa-github"></i>
                    </a>
                    <a href="http://twitter.com/SpykeBytes" target="_blank">
                        <i class="fa fa-twitter"></i>
                    </a>
                    <a href="http://www.linkedin.com/in/cphiggins" target="_blank">
                        <i class="fa fa-linkedin"></i>
                    </a>
                    <a href="http://stackoverflow.com/users/1659016/Spykebytes" target="_blank">
                        <i class="fa fa-stack-overflow"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="section" id="header">
        <div class="widget Header" id="Header1">
            <div class="container"
                style="background-image: url('/img/backgrounds/iceland_flowers.jpg'); background-size: 100% 100%; max-width: 100%; height: 149px;">
                <div id="logo">
                    <h1 class="title">
                        <a href="@(ScionSoftware.Globals.MasterUrl)">Scion Software
                        </a>
                    </h1>
                </div>
            </div>
        </div>
    </div>
    <div class="container sp_sidebar">

        <div class="section" id="main">

            <div class="banner">
                @RenderSection("PageBanner", required: false)
            </div>

            @RenderBody()

            <div class="banner-bottom-ad">
                <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                <!-- Banner - Bottom -->
                <ins class="adsbygoogle"
                    style="display: block"
                    data-ad-client="ca-pub-9074449405350285"
                    data-ad-slot="2042687254"
                    data-ad-format="auto"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </div>
        </div>

        <div class="section desktop-max sidebar">
            <div class="widget Text" id="Text1">
                <h2 class="title"><span>About me</span></h2>
                <div class="widget-content">
                    <div class="textwidget">
                        <br>
                        <p>
                            <img height="200"
                                src="/img/profiles/monkey_face.jpg"
                                style="margin-bottom: 10px; -ms-border-radius: 50%; border-radius: 50%;"
                                width="200">
                        </p>
                        <br>
                        <p>Welcome to Scion Software.</p>
                        <br>
                        <p>
                            I'm <strong>Colin</strong> - I'm a software engineer.
                            Scion Software is my company and personal brand.
                            I can help you deliver and figure out where
                            you are wasting time and money.
                        </p>
                    </div>
                </div>
                <div class="clear"></div>
            </div>

        </div>

        @if (ViewBag.HideArchive != false)
        {
            <div class="section desktop-max sidebar">
                <div class="widget Text">
                    <h2 class="title"><span>Archives</span></h2>
                    <div class="widget-content">
                        <div ss-blog-archive></div>
                    </div>
                </div>
            </div>
        }
    </div>



    <footer id="footer-copyright">
        <div class="container">
            <a class="to-top" href="#">Back to top <i class="fa fa-angle-double-up"></i></a>
        </div>
    </footer>

