    <style type="text/css">
        .share-buttons img {
            width: 35px;
            padding: 5px;
            border: 0;
            box-shadow: 0;
            display: inline;
        }

        .top-social a:hover {
            color: #999999 !important;
        }

        h1.title {
            font-family: "Open Sans", sans-serif;
            /*font-size: 11px;*/
            font-weight: 600;
            letter-spacing: 2px;
            color: #fff;
            text-transform: uppercase;
        }

            h1.title a {
                display: block;
                color: #ffffff;
            }

                h1.title a:hover {
                    text-decoration: none;
                    color: #999999;
                    -o-transition: .3s;
                    -ms-transition: .3s;
                    -moz-transition: .3s;
                    -webkit-transition: .3s;
                }
    </style>

    <link href="/css/scion-media-styles.css" rel="stylesheet" />

    <script src="/syntax-highlighting/prism.js"></script>
    <link href="/syntax-highlighting/prism.css" rel="stylesheet" />
